<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.edu.ifcriodosul.lp2.exservlet.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>br.edu.ifcriodosul.lp2.exservlet.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoriaEmQuadrinhosServlet</servlet-name>
        <servlet-class>br.edu.ifcriodosul.lp2.exservlet.servlet.HistoriaEmQuadrinhosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditoraServlet</servlet-name>
        <servlet-class>br.edu.ifcriodosul.lp2.exservlet.servlet.EditorasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCHqsServlet</servlet-name>
        <servlet-class>br.edu.ifcriodosul.lp2.exservlet.servlet.JDBCHqsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCEditorasServlet</servlet-name>
        <servlet-class>br.edu.ifcriodosul.lp2.exservlet.servlet.JDBCEditorasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoriaEmQuadrinhosServlet</servlet-name>
        <url-pattern>/HistoriaEmQuadrinhosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditoraServlet</servlet-name>
        <url-pattern>/EditoraServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCHqsServlet</servlet-name>
        <url-pattern>/JDBCHqsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCEditorasServlet</servlet-name>
        <url-pattern>/JDBCEditorasServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/erros/erro404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/erros/erro500.jsp</location>
    </error-page>
</web-app>
